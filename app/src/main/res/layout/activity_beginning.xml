<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/masterLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.josh.hallowvale2.beginning"
    android:orientation="vertical"
    android:columnCount="2"
    android:rowCount="2"
    android:background="@drawable/backgroundtwo">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:text="Forge"
                android:id="@+id/button2"
                android:onClick="forgeClick"
                android:layout_gravity="left|top"
                android:backgroundTint="#2E2E2E"
                android:backgroundTintMode="src_over" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageButton"
                android:backgroundTintMode="screen"
                android:background="@drawable/sound"
                android:layout_gravity="right" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView4"
            android:layout_weight="1000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:typeface="serif"
            android:scrollbars = "vertical"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Backpack"
            android:id="@+id/inventory"
            android:layout_weight=".001"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#2E2E2E"
            android:backgroundTintMode="src_over" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/take_item"
            android:id="@+id/take_item_button"
            android:layout_weight=".001"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#474747"
            android:backgroundTintMode="src_over" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/left"
            android:id="@+id/left_button"
            android:layout_weight=".001"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#2E2E2E"
            android:backgroundTintMode="src_over" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/up"
            android:id="@+id/up_button"
            android:layout_weight=".001"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#2E2E2E"
            android:backgroundTintMode="src_over" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/down"
            android:id="@+id/down_button"
            android:layout_weight=".001"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#2E2E2E"
            android:backgroundTintMode="src_over" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/right"
            android:id="@+id/right_button"
            android:layout_weight=".001"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#2E2E2E"
            android:backgroundTintMode="src_over" />

    </LinearLayout>

</LinearLayout>
